{
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "no-console": "warn",
    "comma-dangle": "off",
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "class-methods-use-this": "off",
    "no-mixed-operators": "off",
    "no-plusplus": "off",
    "indent": ["error", 4],
    "no-alert": "error",
    "max-len": ["error", {
      "code": 120,
      "ignoreComments": true
    }]
  }
}
